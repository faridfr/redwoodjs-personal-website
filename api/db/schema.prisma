datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Define your own datamodels here and run `yarn redwood prisma migrate dev`
// to create migrations for them and apply to your dev DB.
// TODO: Please remove the following example:
model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String?
  role     String?
  image    Image?  @relation(fields: [imageId], references: [id])
  imageId  Int?
}

model Education {
  id          Int     @id @default(autoincrement())
  title       String?
  description String?
  fromYear    String?
  toYear      String?
  image       Image?  @relation(fields: [imageId], references: [id])
  imageId     Int?
}

model Setting {
  id    Int     @id @default(autoincrement())
  key   String?
  value String?
}

model Image {
  id                  Int          @id @default(autoincrement())
  image_url           String?
  background_position String?
  category            String?
  active              Boolean
  sort                Int          @default(0)
  User                User[]
  Education           Education[]
  Skill               Skill[]
  Experience          Experience[]
}

model Skill {
  id       Int     @id @default(autoincrement())
  name     String?
  degree   String?
  percent  Int?
  category String?
  active   Boolean
  sort     Int     @default(0)
  image    Image?  @relation(fields: [imageId], references: [id])
  imageId  Int?
}

model Experience {
  id          Int     @id @default(autoincrement())
  title       String?
  image       Image?  @relation(fields: [imageId], references: [id])
  imageId     Int?
  fromDate    String?
  toDate      String?
  location    String?
  description String?
  percent     Int?
  category    String?
  active      Boolean
  sort        Int     @default(0)
}
