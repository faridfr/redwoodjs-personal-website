datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Define your own datamodels here and run `yarn redwood prisma migrate dev`
// to create migrations for them and apply to your dev DB.
// TODO: Please remove the following example:
model User {
  id    Int     @id @default(autoincrement())
  username String  @unique
  password  String?
}

model Education {
  id    Int     @id @default(autoincrement())
  logo  String?
  title String?
  description String?
  fromYear String?
  toYear String?
}

model Setting {
  id    Int     @id @default(autoincrement())
  key  String?
  value String?
}

model Image {
  id    Int     @id @default(autoincrement())
  image_url String?
  background_position String?
  active Boolean
  sort Int @default(0)
}

model Skill {
  id    Int     @id @default(autoincrement())
  name String?
  degree String?
  percent Int?
  category String?
  active Boolean
  sort Int @default(0)
}